{
  "$schema": "vscode://schemas/color-theme",
  "type": "dark",
  "include": "./dark-semantic.json",
  "tokenColors": [
    {
      "name": "keywords",
      "scope": [
        "keyword",
        "keyword.operator.new",
				"keyword.operator.expression",
				"keyword.operator.cast",
				"keyword.operator.sizeof",
				"keyword.operator.alignof",
				"keyword.operator.typeid",
				"keyword.operator.alignas",
				"keyword.operator.instanceof",
				"keyword.operator.logical",
				"keyword.operator.wordlike",
        "keyword.operator.functionlike",
        "meta.encoding"
      ],
      "settings": {
        "foreground": "#cf8e6d"
      }
    },
    {
      "name": "types",
      "scope": [
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#cf8e6d"
      }
    },
    {
      "name": "language constants",
      "scope": [
        "constant",
        "variable.language"
      ],
      "settings": {
        "foreground": "#cf8e6d"
      }
    },
    {
      "name": "function definition",
      "scope": [
        "entity.name.function.definition"
      ],
      "settings": {
        "foreground": "#56a8f5"
      }
    },
    {
      "name": "operators",
      "scope": [
        "keyword.operator",
        "storage.modifier.reference",
        "storage.modifier.pointer",
        "punctuation.separator.colon.access.control"
    ],
      "settings": {
        "foreground": "#bcbec4"
      }
    },
    {
      "name": "strings",
      "scope": [
        "string",
        "string.quoted.other.lt-gt.include",
        "string.quoted.double.include",
        "string.quoted.binary"
      ],
      "settings": {
        "foreground": "#6aab73"
      }
    },
    {
      "name": "numeric",
      "scope": [
        "keyword.other.unit",
        "constant.numeric"
      ],
      "settings": {
        "foreground": "#299fa2"
      }
    },
    {
      "name": "comments",
      "scope": [
        "comment"
      ],
      "settings": {
        "foreground": "#7d7d7d"
      }
    },
    {
      "name": "documentation",
      "scope": [
        "storage.type.class.doxygen",
        "string.quoted.docstring",
        "comment.block.documentation",
        "comment.line.double-slash.documentation"
      ],
      "settings": {
        "foreground": "#5e8163",
        "fontStyle": "italic"
      }
    },
    {
      "name": "doxygen",
      "scope": [
        "storage.type.class.doxygen"
      ],
      "settings": {
        "foreground": "#67a37c",
        "fontStyle": "italic"
      }
    },
    {
      "name": "documentation variable",
      "scope": [
        "comment.block.documentation variable.parameter"
      ],
      "settings": {
        "foreground": "#bcbec4",
        "fontStyle": "italic"
      }
    },
    {
      "name": "tag",
      "scope": [
        "entity.name.tag",
        "punctuation.definition.tag",
        "punctuation.definition.tag.begin",
        "punctuation.definition.tag.end"
      ],
      "settings": {
        "foreground": "#d5b778"
      }
    },

    // #
    // #               CMAKE
    // # 

    {
      "name": "CMAKE keywords",
      "scope": "source.cmake keyword",
      "settings": {
        "foreground": "#ffc66d"
      }
    },
    {
      "name": "CMAKE argument",
      "scope": "source.cmake argument.source",
      "settings": {
        "foreground": "#6aab73"
      }
    },
    {
      "name": "CMAKE source",
      "scope": "source.cmake entity.source",
      "settings": {
        "foreground": "#cf8e6d"
      }
    },

    // #
    // #               CSS
    // # 

    {
      "name": "CSS",
      "scope": [
        "source.css meta.property-value",
        "source.css constant.other.unicode-range",
        "source.css entity.other.attribute-name.pseudo-class",
        "source.css support.constant.language-range",
        "source.css meta.selector.css entity.other.attribute-name",
        "source.css source.css keyword.operator.logical"
      ],
      "settings": {
        "foreground": "#d5b778"
      }
    },
    {
      "name": "CSS",
      "scope": [
        "source.css variable.parameter.url",
        "source.css constant.other.color.rgb-value.hex"
      ],
      "settings": {
        "foreground": "#5c92ff"
      }
    },
    {
      "name": "CCS text",
      "scope": [
        "source.css support.constant.color.w3c-standard-color-name",
        "source.css keyword.other.unit.percentage"
      ],
      "settings": {
        "foreground": "#bcbec4"
      }
    },
    {
      "name": "CSS",
      "scope": [
        "source.css keyword.other.unit.deg",
        "source.css keyword.other.unit.px",
        "source.css support.constant.property-value"
      ],
      "settings": {
        "foreground": "#6aab73"
      }
    },

    // #
    // #               HTML
    // # 

    {
      "name": "HTML constants",
      "scope": [
        "text.html.derivative constant.character.entity.numeric.hexadecimal",
        "text.html.derivative constant.character.entity.named.Alpha"
      ],
      "settings": {
        "foreground": "#56a8f5"
      }
    },
    {
      "name": "HTML custom tag",
      "scope": [
        "text.html.derivative meta.tag.custom.start.html entity.name.tag",
        "text.html.derivative meta.tag.other.unrecognized.html.derivative entity.name.tag"
      ],
      "settings": {
        "foreground": "#2fbaa3"
      }
    },

    // #
    // #               JSON
    // # 

    {
      "name": "JSON property name",
      "scope": [
        "source.json support.type.property-name"
      ],
      "settings": {
        "foreground": "#c77dbb"
      }
    },
    {
      "name": "JSON keywords",
      "scope": [
        "source.json invalid.illegal.unrecognized-string-escape"
      ],
      "settings": {
        "foreground": "#cf8e6d"
      }
    },

    // #
    // #               PYTHON
    // # 

    {
      "name": "PYTHON function parameters",
      "scope": [
        "source.python variable.parameter.function-call"
      ],
      "settings": {
        "foreground": "#AA4926"
      }
    },
    {
      "name": "PYTHON arguments[]",
      "scope": [
        "source.python punctuation.definition.arguments"
      ],
      "settings": {
        "foreground": "#56A8F5"
      }
    },
    {
      "name": "PYTHON magic variable",
      "scope": [
        "source.python support.variable.magic"
      ],
      "settings": {
        "foreground": "#B200B2"
      }
    },
    {
      "name": "PYTHON decorator",
      "scope": [
        "source.python punctuation.definition.decorator"
      ],
      "settings": {
        "foreground": "#B3AE60"
      }
    },
    {
      "name": "PYTHON text",
      "scope": [
        "source.python constant.other.caps"
      ],
      "settings": {
        "foreground": "#bcbec4"
      }
    },

    // #
    // #               REGEX
    // # 

    {
      "name": "regex keyword",
      "scope": [
        "support.other.match.begin.regexp",
        "support.other.match.end.regexp",
        "keyword.operator.negation.regexp"
      ],
      "settings": {
        "foreground": "#cf8e6d"
      }
    },
    {
      "name": "regex quantifier",
      "scope": [
        "keyword.operator.quantifier.regexp"
      ],
      "settings": {
        "foreground": "#299fa2"
      }
    },
    {
      "name": "regex operator",
      "scope": [
        "support.other.parenthesis.regexp",
        "support.other.match.any.regexp",
        "constant.other.set.regexp"
      ],
      "settings": {
        "foreground": "#bcbec4"
      } 
    },
    {
      "name": "regex escaped", // Should be character class, but it's not tokenized
      "scope": [
        "constant.character.escape.regexp"
      ],
      "settings": {
        "foreground": "#b2ae60"
      }
    },
    {
      "name": "regex string",
      "scope": [
        "constant.character.set.regexp"
      ],
      "settings": {
        "foreground": "#6aab73"
      }
    },

    // #
    // #               XML
    // # 

    {
      "name": "XML keywords",
      "scope": [
        "text.xml keyword.other.doctype",
        "text.xml entity.other.attribute-name.namespace"
      ],
      "settings": {
        "foreground": "#d5b778"
      }
    },
    {
      "name": "XML",
      "scope": [
        "text.xml punctuation.definition.constant",
        "text.xml constant.character.entity"
      ],
      "settings": {
        "foreground": "#56a8f5"
      }
    },
    {
      "name": "XML text",
      "scope": [
        "text.xml string.unquoted.cdata"
      ],
      "settings": {
        "foreground": "#bcbec4"
      }
    },

    // #
    // #               MARKDOWN
    // # 

    {
      "name": "MARKDOWN headings",
      "scope": [
        "text.html.markdown markup.heading",
        "text.html.markdown markup.heading.markdown punctuation.definition.link.title.begin",
        "text.html.markdown markup.heading.markdown punctuation.definition.link.title.end",
        "text.html.markdown markup.heading.markdown markup.underline.link",
        "text.html.markdown markup.heading.markdown markup.inline.raw.string",
        "text.html.markdown markup.heading.markdown markup.quote",
        "text.html.markdown markup.heading.markdown punctuation.definition.metadata",
        "text.html.markdown markup.heading.markdown punctuation.definition.list.begin",
        "text.html.markdown markup.heading.markdown punctuation.definition.raw",
        "text.html.markdown markup.heading.markdown punctuation.definition.italic",
        "text.html.markdown markup.heading.markdown punctuation.definition.bold",
        "text.html.markdown markup.heading.markdown punctuation.definition.strikethrough",
        "text.html.markdown markup.heading.markdown punctuation.definition.quote.begin",
        "text.html.markdown markup.heading.markdown string.other.link.title",
        "text.html.markdown markup.heading.markdown string.other.link.description",
        "text.html.markdown markup.heading.markdown punctuation.definition.strikethrough",
        "text.html.markdown markup.heading.markdown markup.strikethrough",
        "text.html.markdown markup.heading.markdown punctuation.definition.link",
        "text.html.markdown markup.heading.markdown punctuation.definition.link.title.begin",
        "text.html.markdown markup.heading.markdown punctuation.definition.link.title.end",
        "text.html.markdown markup.heading.markdown punctuation.definition.constant.begin",
        "text.html.markdown markup.heading.markdown punctuation.definition.metadata",
        "text.html.markdown markup.heading.markdown punctuation.definition.constant.end",
        "text.html.markdown markup.heading.markdown punctuation.definition.constant",
        "text.html.markdown markup.heading.setext.1",
        "text.html.markdown markup.heading.setext.2",
        "text.html.markdown markup.heading.markdown markup.fenced_code.block",
        "text.html.markdown markup.heading.markdown markup.raw.block",
        "text.html.markdown markup.heading.markdown meta.separator"
      ],
      "settings": {
        "foreground": "#c77dbb",
        "fontStyle": "italic"
      }
    },
    {
      "name": "MARKDOWN strings",
      "scope": [
        "text.html.markdown markup.inline.raw.string",
        "text.html.markdown markup.quote",
        "text.html.markdown punctuation.definition.raw",
        "text.html.markdown markup.fenced_code.block",
        "text.html.markdown markup.raw.block"
      ],
      "settings": {
        "foreground": "#6aab73"
      }
    },
    {
      "name": "MARKDOWN keywords",
      "scope": [
        "text.html.markdown punctuation.definition.metadata",
        "text.html.markdown punctuation.definition.italic",
        "text.html.markdown punctuation.definition.bold",
        "text.html.markdown punctuation.definition.strikethrough",
        "text.html.markdown punctuation.definition.quote.begin",
        "text.html.markdown punctuation.definition.constant.begin",
        "text.html.markdown punctuation.definition.constant.end",
        "text.html.markdown punctuation.definition.constant",
        "text.html.markdown punctuation.definition.table",
        "text.html.markdown punctuation.separator.table",
        "text.html.markdown meta.separator"
      ],
      "settings": {
        "foreground": "#cf8e6d"
      }
    },
    {
      "name": "MARKDOWN links",
      "scope": [
        "text.html.markdown markup.underline.link",
        "text.html.markdown punctuation.definition.link",
        "text.html.markdown punctuation.definition.link.title.begin",
        "text.html.markdown string.other.link.title",
        "text.html.markdown punctuation.definition.link.title.end"
      ],
      "settings": {
        "foreground": "#56a8f5",
        "fontStyle": "italic"
      }
    },
    {
      "name": "MARKDOWN strikethrough",
      "scope": [
        "text.html.markdown punctuation.definition.strikethrough",
        "text.html.markdown markup.strikethrough"
      ],
      "settings": {
        "foreground": "#bcbec4",
        "fontStyle": "strikethrough"
      }
    },
    {
      "name": "MARKDOWN text",
      "scope": [
        "text.html.markdown punctuation.definition.metadata"
      ],
      "settings": {
        "foreground": "#bcbec4"
      }
    }
  ]
}